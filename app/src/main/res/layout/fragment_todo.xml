<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/top_view_home3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_view_home"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="92dp"
        android:text="Meine Aufgaben"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintStart_toStartOf="@+id/top_view_home3" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="411dp"
        android:layout_height="338dp"
        android:maxDate="12/31/2030"
        android:minDate="01/01/2023"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="text"
        android:text="name\n\n"
        app:layout_constraintBottom_toTopOf="@+id/Beschreibung"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Beschreibung"
        android:layout_width="412dp"
        android:layout_height="212dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="beschreibung\n\n"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/editTextText2"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="text"
        android:text="Prio:"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Prip"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="number"
        android:text="prio\n\n"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintStart_toEndOf="@+id/editTextText2" />

</androidx.constraintlayout.widget.ConstraintLayout>
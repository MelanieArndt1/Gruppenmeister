<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/taskCellContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- LinearLayout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp">

        <!-- CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            >

            <!-- ImageButton -->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkButton"
                android:padding="10dp"
                android:src="@drawable/baseline_check_box_outline_blank_24"
                android:backgroundTint="@android:color/transparent"
                app:tint="@color/white"
                android:layout_gravity="center"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:contentDescription="CheckIcon"/>
        </androidx.cardview.widget.CardView>

<!-- LinearLayout -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <!-- TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/taskName"
            android:text="Example"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>

        <!-- TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/baseline_access_time_filled_24"
            android:drawableTint="#DDDDDD"
            android:drawablePadding="10dp"
            android:id="@+id/dueName"
            android:text="Example"
            android:textColor="#DDDDDD"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

        <!-- ImageView -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_face_24"
            android:layout_gravity="center"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:backgroundTint="@android:color/transparent"
            app:tint="@color/white"
            android:layout_marginRight="10dp"
            />

        <!-- ImageButton -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prioIcon"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_star_border_24"
            android:backgroundTint="@android:color/transparent"
            app:tint="#DDDDDD"
            android:layout_gravity="center"
            android:scaleY="1.25"
            android:scaleX="1.25"
            android:contentDescription="PrioIcon"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
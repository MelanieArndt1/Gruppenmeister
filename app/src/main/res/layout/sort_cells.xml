<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- LinearLayout -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Button Datum -->
        <Button
            android:id="@+id/date_sort"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/purple_200"
            android:drawableEnd="@drawable/baseline_compare_arrows_24"
            android:text="Datum"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toEndOf="@+id/alpha_sort"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Button Dateiname bzw. Sortierung nach Alphabet -->
        <Button
            android:id="@+id/alpha_sort"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="13dp"
            android:backgroundTint="@color/purple_200"
            android:drawableEnd="@drawable/baseline_sort_by_alpha_24"
            android:text="Dateiname"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/date_sort"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>